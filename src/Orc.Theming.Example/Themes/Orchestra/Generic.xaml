<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:catel="http://schemas.catelproject.com"
                    xmlns:orc="http://www.wildgums.net.au/orc">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Catel.MVVM;component/Themes/Generic.xaml" />
        <ResourceDictionary Source="/Orc.Theming;component/Themes/Generic.xaml" />
        <ResourceDictionary Source="/Orc.Controls;component/Themes/Generic.xaml" />

        <!-- Generic overrides (with margins) -->
        <ResourceDictionary Source="/Orc.Theming.Example;component/Themes/Orchestra/Orchestra.generic.wpf.xaml" />
        <ResourceDictionary Source="/Orc.Theming.Example;component/Themes/Orchestra/Orchestra.defaultstyles.orc.controls.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- Controls that use BasedOn need to be defined on this level -->
    <Style x:Key="DataWindowButtonStyle" TargetType="Button" BasedOn="{StaticResource Orc.Styles.Button}">
        <Setter Property="Margin" Value="6, 6, 0, 0" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="MinWidth" Value="100" />
        <Setter Property="MinHeight" Value="23" />
    </Style>

</ResourceDictionary>