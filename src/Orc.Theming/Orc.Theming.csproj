<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>net46;net47;netcoreapp3.1</TargetFrameworks>
    <AssemblyName>Orc.Theming</AssemblyName>
    <RootNamespace>Orc.Theming</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <PackageId>Orc.Theming</PackageId>
    <PackageVersion>1.0.0-alpha0001</PackageVersion>
    <Description>Theming library.</Description>
    <PackageTags>orc;theme;theming;</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <UseWpf>true</UseWpf>
    <UseWindowsForms>true</UseWindowsForms>
    <ExtrasEnableImplicitWpfReferences>true</ExtrasEnableImplicitWpfReferences>
    <ExtrasEnableImplicitWinFormsReferences>true</ExtrasEnableImplicitWinFormsReferences>
  </PropertyGroup>

  <PropertyGroup>
    <!-- SonarQube requires a project guid -->
    <ProjectGuid>FCD588FC-6ACC-4658-893F-0ECB2D8DE620</ProjectGuid>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Catel.Fody" Version="4.5.0" PrivateAssets="all" />
    <PackageReference Include="Catel.MVVM" Version="5.12.10" />
    <PackageReference Include="ControlzEx" Version="4.3.2" />
    <PackageReference Include="Costura.Fody" Version="4.1.0" PrivateAssets="all" />
    <PackageReference Include="Fody" Version="6.2.6" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="LoadAssembliesOnStartup.Fody" Version="4.5.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="MethodTimer.Fody" Version="3.1.2" PrivateAssets="all" />
    <PackageReference Include="ModuleInit.Fody" Version="2.1.1" PrivateAssets="all" />
    <PackageReference Include="Obsolete.Fody" Version="5.2.1" PrivateAssets="all" />
  </ItemGroup>

  <!-- Theming -->
  <ItemGroup>
    <Page Remove="**/*.Template.xaml" />
    <EmbeddedResource Include="**/*.Template.xaml" />

    <None Remove="**/GeneratorParameters.json" />
    <EmbeddedResource Include="**/GeneratorParameters.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="AttachedProperties\" />
  </ItemGroup>

  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props')" />
</Project>
