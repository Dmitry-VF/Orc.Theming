<UserControl x:Class="Orc.Theming.Controls.ThemeImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Orc.Theming.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Image x:Name="Image" 
               Stretch="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:ThemeImage}}, Path=Stretch}"
               StretchDirection="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:ThemeImage}}, Path=Stretch}" />
    </Grid>
</UserControl>
